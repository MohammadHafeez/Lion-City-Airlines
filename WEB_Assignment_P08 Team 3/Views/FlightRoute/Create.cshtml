@model WEB_Assignment_P08_Team_3.Models.FlightRoute

@{
    ViewData["Title"] = "Create";
}

<div class="container route-create" style="margin-top: 25px;">
    <h4>Create Flight Schedule</h4>
    <hr />
    <form asp-action="Create">
        <div class="row row-1 justify-content-center">
            <div class="form-group col-9 col-md-4">
                <label asp-for="DepartureCity" class="control-label"></label>
                <input asp-for="DepartureCity" class="form-control" required />
                <span asp-validation-for="DepartureCity" class="text-danger"></span>
            </div>
            <div class="form-group col-9 col-md-4">
                <label asp-for="DepartureCountry" class="control-label"></label>
                <input asp-for="DepartureCountry" class="form-control" required />
                <span asp-validation-for="DepartureCountry" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="row row-2 justify-content-center">
            <div class="form-group col-9 col-md-4">
                <label asp-for="ArrivalCity" class="control-label"></label>
                <input asp-for="ArrivalCity" class="form-control" required />
                <span asp-validation-for="ArrivalCity" class="text-danger"></span>
            </div>
            <div class="form-group col-9 col-md-4">
                <label asp-for="ArrivalCountry" class="control-label"></label>
                <input asp-for="ArrivalCountry" class="form-control" required />
                <span asp-validation-for="ArrivalCountry" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="row row-3 justify-content-center">
            <div class="form-group col-9 col-md-4">
                <label asp-for="FlightDuration" class="control-label"></label>
                <input asp-for="FlightDuration" class="form-control" />
                <p class="text-danger">@TempData["TooLong"]</p>
                <span asp-validation-for="FlightDuration" class="text-danger"></span>
            </div>
        </div>
        <div class="row row-4 justify-content-center">
            <div>
                <input type="submit" value="Create" class="btn btn-dark" />
                <p class="text-danger" style="margin-top: 25px;">@TempData["Invalid"]</p>
                <p class="text-danger" style="margin-top: 25px;">@TempData["Exists"]</p>
            </div>
        </div>
    </form>
    <a href="~/Admin/Index">Back to Main Page</a>
</div>