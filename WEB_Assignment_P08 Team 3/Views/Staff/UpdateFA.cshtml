@model IEnumerable<WEB_Assignment_P08_Team_3.Models.Staff>

@if (Model.ToList().Count != 0)
{
<form asp-controller="Staff" asp-action="UpdateFA" method="post">
    <div class="table-responsive" style="margin-top: 35px;">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>StaffID</th>
                    <th>Staff Name</th>
                    <th>Gender</th>
                    <th>Employment Date</th>
                    <th>Vocation</th>
                    <th>Email Address</th>
                    <th>Status</th>
                    <th>Select</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.StaffID</td>
                        <td>@i.StaffName</td>
                        <td>@i.Gender</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", i.DateEmployed)</td>
                        <td>@i.Vocation</td>
                        <td>@i.EmailAddr</td>
                        <td>@i.Status</td>
                        <td>
                            <button type="submit" asp-route-id="@i.StaffID">Replace Flight Attendant</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
}