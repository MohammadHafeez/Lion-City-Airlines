@model IEnumerable<WEB_Assignment_P08_Team_3.Models.Staff>;

@if (Model.ToList().Count != 0)
{
    <div class="table-responsive" style="margin-top: 35px;">
        <p class="text-danger">@TempData["ScheduleFound"]</p>
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>StaffID</th>
                    <th>Staff Name</th>
                    <th>Gender</th>
                    <th>Employment Date</th>
                    <th>Vocation</th>
                    <th>Email Address</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>@i.StaffID</td>
                        <td>@i.StaffName</td>
                        <td>@i.Gender</td>
                        <td>@String.Format("{0:dd/MM/yyyy}", i.DateEmployed)</td>
                        <td>@i.Vocation</td>
                        <td>@i.EmailAddr</td>
                        <td>@i.Status</td>
                        <td>
                            <a asp-action="ViewStaffSchedule" asp-controller="Staff"
                               asp-route-id="@i.StaffID">View Flight Schedules</a> |
                            <a asp-action="Edit" asp-controller="Staff"
                               asp-route-id="@i.StaffID">Change Status</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
