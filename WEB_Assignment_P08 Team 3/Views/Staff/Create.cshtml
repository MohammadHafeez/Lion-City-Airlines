@model WEB_Assignment_P08_Team_3.Models.Staff

@{
    ViewData["Title"] = "Create";
}

<h4 style="text-align:center; font-family:'Segoe UI'">Add New Staff</h4>
<hr />
<div style="display: flex; justify-content: center;" class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StaffName" class="control-label"></label>
                <input asp-for="StaffName" class="form-control" />
                <span asp-validation-for="StaffName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label><br>
                <input type="radio" name="gender" value="M"> Male
                <input style ="margin-left:35px;"type="radio" name="gender" value="F"> Female<br>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEmployed" class="control-label"></label>
                <input asp-for="DateEmployed" class="form-control" />
                <span asp-validation-for="DateEmployed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vocation" class="control-label"></label>
                <select id="Vocation" name="Vocation">
                    <option value="Pilot">Pilot</option>
                    <option value="Flight Attendant">Flight Attendant</option>
                </select>
                <span asp-validation-for="Vocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddr" class="control-label"></label>
                <input asp-for="EmailAddr" class="form-control" />
                <span asp-validation-for="EmailAddr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add New Staff" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View Staff</a>
</div>

