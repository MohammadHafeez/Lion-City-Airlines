@model IEnumerable<WEB_Assignment_P08_Team_3.Models.Booking>

@if (Model.ToList().Count != 0)
{
    <div class="table-responsive" style="margin-top:35px">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BookingID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ScheduleID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PassengerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SeatClass)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateTimeCreated)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                <tr>

                    <td>
                        <a asp-action="SpecificBooking" asp-controller="ViewBookings" asp-route-id="@item.BookingID" style="display:block;position:relative;color:#000000;text-decoration:none;">
                            @Html.DisplayFor(modelItem => item.BookingID)
                        </a>

                    </td>
                    <td>
                        <a asp-action="SpecificBooking" asp-controller="ViewBookings" asp-route-id="@item.BookingID" style="display:block;position:relative;color:#000000;text-decoration:none;">
                            @Html.DisplayFor(modelItem => item.ScheduleID)
                        </a>
                    </td>
                    <td>
                        <a asp-action="SpecificBooking" asp-controller="ViewBookings" asp-route-id="@item.BookingID" style="display:block;position:relative;color:#000000;text-decoration:none;">
                            @Html.DisplayFor(modelItem => item.PassengerName)
                        </a>
                    </td>
                    <td>
                        <a asp-action="SpecificBooking" asp-controller="ViewBookings" asp-route-id="@item.BookingID" style="display:block;position:relative;color:#000000;text-decoration:none;">
                            @Html.DisplayFor(modelItem => item.SeatClass)
                        </a>
                    </td>
                    <td>
                        <a asp-action="SpecificBooking" asp-controller="ViewBookings" asp-route-id="@item.BookingID" style="display:block;position:relative;color:#000000;text-decoration:none;">
                            @Html.DisplayFor(modelItem => item.DateTimeCreated)
                        </a>
                    </td>
                </tr>


                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No past bookings found!!</span>
}

