@{
    ViewData["Title"] = "Announcements";
}

<div class="container-fluid announcement-container">
    <h4 style="text-align: center; color: #164e87; margin-top: 15px;">Announcements</h4>
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div id="example" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#example" data-slide-to="0" class="active bg-dark"></li>
                    <li data-target="#example" data-slide-to="1" class="bg-dark"></li>
                </ul>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/images/Covid-19.png" alt="project" />
                        <p>
                            In light of the Covid-19 Situation, flights will not be available
                            till further notice, we thank you for your understanding and
                            hope that you will continue to choose Lion City Airlines for
                            your future travels.
                        </p>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/images/FlightDelay.jpg" alt="project" />
                        <p>
                            We regret to inform you that we are currently experiencing
                            flight delays from flights coming in from Indonesia due to
                            the sudden bad weather. Flights F-rkmtbhgb, F-nh9czcqp and
                            F-ew5sdhm9 are our affected flights.
                        </p>
                    </div>
                </div>

                <a href="#example" class="carousel-control-prev" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a href="#example" class="carousel-control-next" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>
    </div>







