
@{
    ViewData["Title"] = "Main Page";
}

    <div class="container-fluid">
        <h4>Welcome, @Context.Session.GetString("Name")</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-12 col-md-4">
                <a href="~/FlightBooking/ChooseFlight">
                    <container class="myContainerCustom">
                        <img src="~/images/FlightLogo.png"
                             style="width: 65%;padding-bottom:30px" /><br />
                        Make a Booking
                    </container>
                </a>
            </div>
            <div class="col-12 col-md-4">
                <a href="~/ViewBookings/BookingHistory">
                    <container class="myContainerCustom">
                        <img src="~/images/HistoryIcon.png"
                             style="width: 55%;padding-bottom:15px" /><br />
                        View Bookings
                    </container>
                </a>
            </div>
            <div class="col-12 col-md-4">
                <a href="~/Customer/ChangePassword">
                    <container class="myContainerCustom">
                        <img src="~/images/PasswordLogo.png"
                             style="width: 50%;padding-bottom:10px;padding-top:10px" /><br />
                        Change Password
                    </container>
                </a>
            </div>
        </div>
    </div>
